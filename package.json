{
  "template": {
    "inheridFrom": [
      "arlac77/template-github"
    ],
    "mergers": [
      {
        "type": "YAML",
        "pattern": ".github/workflows/*.yml",
        "options": {
          "messagePrefix": "chore(github): ",
          "mergeHints": {
            "*": {
              "scope": "github",
              "removeEmpty": true
            },
            "Jobs": {
              "orderBy": [
                "Test",
                "Release"
              ]
            }
          }
        }
      }
    ],
    "usedBy": [
      "Kronos-Integration/service"
    ]
  }
}