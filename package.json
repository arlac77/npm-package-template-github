{
  "template": {
    "inheridFrom": [
      "arlac77/template-github"
    ],
    "mergers": [
      {
        "type": "Skip",
        "pattern": ".travis.yml"
      },
      {
        "type": "YAML",
        "pattern": ".github/pr_labeler.yml",
        "options": {
          "messagePrefix": "chore(labels): "
        }
      },
      {
        "type": "YAML",
        "pattern": ".github/workflows/*.yml",
        "options": {
          "messagePrefix": "chore(actions): ",
          "mergeHints": {
            "*": {
              "removeEmpty": true
            },
            "*.matrix.node-version": {
              "scope": "deps",
              "merge": "mergeVersionsPreferNumeric"
            },
            "*.steps": {
              "key": "id|name|uses|run"
            }
          }
        }
      },
      {
        "type": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "Build Action Status",
              "icon": "https://img.shields.io/endpoint.svg?url=https%3A%2F%2Factions-badge.atrox.dev%2F{{github.user}}%2F{{github.repo}}%2Fbadge&style=flat",
              "url": "https://actions-badge.atrox.dev/{{github.user}}/{{github.repo}}/goto",
              "order": 0.21
            }
          ]
        }
      }
    ],
    "usedBy": [
      "arlac77/SymatemExplorer",
      "arlac77/console-auth-provider",
      "arlac77/env-auth-provider",
      "arlac77/expression-expander",
      "arlac77/hook-ci-frontend-svelte",
      "arlac77/konsum-frontend-svelte",
      "arlac77/template-arlac77-github",
      "arlac77/uti",
      "k0nsti/konsum-db"
    ]
  }
}