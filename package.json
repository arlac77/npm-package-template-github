{
  "template": {
    "files": [
      {
        "merger": "YAML",
        "pattern": ".github/workflows/*.yml",
        "options": {
          "messagePrefix": "chore(github): ",
          "mergeHints": {
            "*": {
              "scope": "github",
              "removeEmpty": true
            },
            "Jobs": {
              "orderBy": [
                "Test",
                "Release"
              ]
            }
          }
        }
      }
    ]
  }
}
